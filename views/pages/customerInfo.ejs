<% layout("/layouts/biolerplate") %>

<body>
  <div class="row justify-content-evenly align-items-center">
    <div
      class="col-sm-12 col-md-4 col-lg-4 varient-main py-3 my-5"
      data-aos="zoom-in"
      data-aos-duration="2000"
    >
      <div class="order-img">
        <img src="<%= customer.image %>" class="img-fluid" alt="..." />
      </div>
      <div class="d-flex mt-4 w-75 justify-content-between">
        <b>Color: </b>
        <div
          style="
            width: 25px;
            height: 25px;
            border-radius: 50%;
            background-color: <%= customer.color %>;
          "
        ></div>
      </div>
      <div class="d-flex mt-4 w-75 justify-content-between">
        <b>Size: </b>
        <b><%= customer.size %></b>
      </div>
      <div class="d-flex mt-4 w-75 justify-content-between">
        <b>Quantity: </b>
        <b><%= customer.quantity %></b>
      </div>
      <div class="d-flex mt-4 w-75 justify-content-between">
        <b>Price </b>
        <b><%= customer.price * customer.quantity %></b>
      </div>
    </div>
    <div
      class="addproduct-form col-sm-12 col-md-6 col-lg-6 my-5"
      data-aos="zoom-in"
      data-aos-duration="2000"
    >
      <div class="d-flex justify-content-center align-items-center mb-3">
        <h3 style="color: white">Shipping Details</h3>
      </div>

      <form action="/products/order/confirm" method="post" class="row g-3">
        <div class="col-12">
          <label for="inputFirstName" class="form-label">First Name</label>
          <input type="text" class="form-control" name="customer[firstName]" id="inputFirstName" />
        </div>
        <div class="col-12">
          <label for="inputLastName" class="form-label">Last Name</label>
          <input type="text" class="form-control" name="customer[lastName]" id="inputLastName" />
        </div>
        <div class="col-12">
          <label for="inputEmail4" class="form-label">Email</label>
          <input type="email" class="form-control" name="customer[email]" id="inputEmail4" />
        </div>
        <div class="col-12">
          <label for="inputNumber" class="form-label">Phone No</label>
          <input type="text" class="form-control" name="customer[phone]" id="inputNumber" />
        </div>
        <div class="col-12">
          <label for="inputAddress" class="form-label">Address</label>
          <input
            type="text"
            class="form-control"
            id="inputAddress"
            placeholder="1234 Main St"
            name="customer[address1]"
          />
        </div>
        <div class="col-12">
          <label for="inputAddress2" class="form-label">Address 2</label>
          <input
            type="text"
            class="form-control"
            id="inputAddress2"
            placeholder="Apartment, studio, or floor"
            name="customer[address2]"
          />
        </div>
        <div class="col-12">
          <label for="inputCity" class="form-label">City</label>
          <input type="text" class="form-control" name="customer[city]" id="inputCity" />
        </div>
        <div class="col-12">
          <label for="inputState" class="form-label">State</label>
          <input type="text" class="form-control" name="customer[state]" id="inputState" />
        </div>
        <div class="col-12">
          <label for="inputCountry" class="form-label">Country</label>
          <input type="text" class="form-control" name="customer[country]" id="inputCountry" />
        </div>

        <input type="hidden" name="customer[image][url]" value="<%= customer.image %>">
        <input type="hidden" name="customer[color]" value="<%= customer.color %>">
        <input type="hidden" name="customer[size]" value="<%= customer.size %>">
        <input type="hidden" name="customer[quantity]" value="<%= customer.quantity %>">
        <input type="hidden" name="customer[price]" value="<%= customer.price * customer.quantity %>">

        <div class="prime-btn mt-5 d-flex justify-content-center">
          <button class="btn btn-primary">Place Order</button>
        </div>
      </form>
    </div>
  </div>
</body>
